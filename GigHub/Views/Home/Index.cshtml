@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>The Gighub website</h1>
    <p class="alert alert-success">Acompanhe os eventos da sua cidade</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <ul class="gigs">
                @foreach (var gig in Model)
                {
                    @**<li>@gig.DateTime - @gig.Artist.Name</li>*@
                    <li>
                        <div class="date">
                            <div class="month">
                                @gig.DateTime.ToString("MMM")
                            </div>
                            <div class="day">
                                @gig.DateTime.ToString("d ")
                            </div>
                        </div>
                        <div class="details">
                            <span class="artist">
                                @gig.Artist.Name
                            </span>
                            <span class="genre">
                                @gig.Genre.Name
                            </span>
                        </div>
                    </li>
                }

            </ul>
        </div>
        
        
        
